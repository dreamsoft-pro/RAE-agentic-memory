# Development Environment Configuration
# Copy this to .env for local development
#
# This file contains development-friendly defaults

# =============================================================================
# DATABASE CONFIGURATION (Dev Mode - No Password)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_DB=rae
POSTGRES_USER=rae
POSTGRES_PASSWORD=rae_password

# =============================================================================
# VECTOR STORE CONFIGURATION
# =============================================================================
RAE_VECTOR_BACKEND=qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# =============================================================================
# REDIS & CELERY CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =============================================================================
# LLM BACKEND CONFIGURATION
# =============================================================================
RAE_LLM_BACKEND=anthropic  # Options: openai, anthropic, gemini, ollama

# Default Model
RAE_LLM_MODEL_DEFAULT=claude-3-5-sonnet-20241022

# Specialized Models
EXTRACTION_MODEL=claude-3-5-haiku-20241022
SYNTHESIS_MODEL=claude-3-5-sonnet-20241022

# API Keys (replace with your own)
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
GEMINI_API_KEY=your-gemini-key-here

# Ollama (for local LLM)
OLLAMA_API_URL=http://host.docker.internal:11434

# =============================================================================
# SECURITY CONFIGURATION (Disabled for Dev)
# =============================================================================
TENANCY_ENABLED=false
ENABLE_API_KEY_AUTH=false
ENABLE_JWT_AUTH=false
OAUTH_ENABLED=false
ENABLE_RATE_LIMITING=false

# CORS - Allow all origins in dev
ALLOWED_ORIGINS=["*"]

# =============================================================================
# MICROSERVICES CONFIGURATION
# =============================================================================
ML_SERVICE_URL=http://ml-service:8001
RERANKER_API_URL=http://ml-service:8001
MEMORY_API_URL=http://rae-api:8000

# =============================================================================
# MEMORY LIFECYCLE CONFIGURATION
# =============================================================================
MEMORY_RETENTION_DAYS=30
MEMORY_DECAY_RATE=0.01
MEMORY_DECAY_ENABLED=true
MEMORY_IMPORTANCE_DECAY_ENABLED=true

# =============================================================================
# LOGGING CONFIGURATION (Verbose for Dev)
# =============================================================================
LOG_LEVEL=INFO
RAE_APP_LOG_LEVEL=DEBUG

# =============================================================================
# OPENTELEMETRY CONFIGURATION (Disabled for Performance)
# =============================================================================
OTEL_TRACES_ENABLED=false  # Set to true to debug performance
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=rae-memory-api
OTEL_SERVICE_VERSION=2.2.0-enterprise
OTEL_EXPORTER_TYPE=otlp
ENVIRONMENT=development
