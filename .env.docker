# RAE Memory API - Environment Configuration Example
# Copy this file to .env and update with your values
# Note: Do not use quotes around values in .env files

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_DB=rae
POSTGRES_USER=rae
POSTGRES_PASSWORD=rae_password

# =============================================================================
# VECTOR STORE CONFIGURATION
# =============================================================================
RAE_VECTOR_BACKEND=qdrant  # Options: qdrant, pgvector
QDRANT_HOST=qdrant
QDRANT_PORT=6333
RAE_VECTOR_DISTANCE=Cosine # Options: Cosine, Euclidean, Dot

# Minimum similarity threshold for search results (0.0 - 1.0)
# Note: nomic-embed-text works best with values around 0.3-0.5
RAE_SIMILARITY_THRESHOLD=0.3

# =============================================================================
# REDIS & CELERY CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =============================================================================
# LLM BACKEND CONFIGURATION
# =============================================================================

# LLM Provider Selection
RAE_LLM_BACKEND=ollama  # Options: openai, anthropic, gemini, ollama, litellm

# Default Model
RAE_LLM_MODEL_DEFAULT=gpt-4o-mini

# --- OpenAI Configuration ---
OPENAI_API_KEY=your-openai-api-key

# --- Anthropic Configuration ---
# ANTHROPIC_API_KEY=your-anthropic-key

# --- Google Gemini Configuration ---
# GEMINI_API_KEY=your-gemini-api-key

# --- Ollama Configuration ---
# Use http://host.docker.internal:11434 for Ollama running on host (Linux/Docker)
OLLAMA_API_URL=http://host.docker.internal:11434

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Multi-Tenancy
TENANCY_ENABLED=false
ALLOWED_ORIGINS=["*"]

# API Key Authentication
ENABLE_API_KEY_AUTH=false
API_KEY=your-secret-api-key

# JWT Authentication
ENABLE_JWT_AUTH=false
SECRET_KEY=change-this-secret-key-in-production

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
RAE_API_URL=http://rae-api:8000
RAE_TENANT_ID=00000000-0000-0000-0000-000000000000
RAE_PROJECT_ID=RAE-agentic-memory

# =============================================================================
# SYSTEM & PROFILES
# =============================================================================
RAE_PROFILE=standard # Options: lite, standard, research, distributed
RAE_DB_MODE=migrate  # Options: migrate, init, ignore
LOG_LEVEL=WARNING
RAE_APP_LOG_LEVEL=INFO

# =============================================================================
# OPENTELEMETRY CONFIGURATION
# =============================================================================
OTEL_TRACES_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=rae-memory-api
OTEL_EXPORTER_TYPE=otlp